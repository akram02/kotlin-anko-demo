<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
    package="com.vsouhrada.kotlin.android.anko.fibo">

    <uses-sdk tools:overrideLibrary="com.hkm.ui.processbutton"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".app.FiboApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".function.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.vsouhrada.kotlin.android.anko.fibo.function.signin.SignInActivity" />
        <activity android:name=".DrawerActivity" android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>